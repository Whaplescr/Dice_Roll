<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/d4"
        android:text="4 Sided"
        android:layout_above="@+id/d6"
        android:layout_alignStart="@+id/d6" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 Sided"
        android:id="@+id/d10"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6 Sided"
        android:id="@+id/d6"
        android:layout_above="@+id/d10"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12 Sided"
        android:id="@+id/d12"
        android:layout_below="@+id/d10"
        android:layout_alignStart="@+id/d10" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20 Sided"
        android:id="@+id/d20"
        android:layout_below="@+id/d12"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
